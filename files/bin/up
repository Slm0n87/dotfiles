#!/bin/bash

set -ex


brew update
brew upgrade --all
brew reinstall --HEAD fzf neovim

set +x
echo "Doing RVM stuff..."
  source ~/.rvm/scripts/rvm
  rvm get stable
  rvm reload
set -x

nvim +PlugUpgrade +PlugUpdate +qa

pushd ~/code/apm_bundle
  git checkout master
  git fetch --prune
  git merge origin/master --ff-only
  buns
  migs
popd

:
