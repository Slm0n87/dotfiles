#!/bin/bash

function urls() {
  local urls=()
  while read -r url; do
    urls=("${urls[@]}" "$url")
  done
  echo "${urls[@]}"
}

function download() {
  local urls=($@)
  for url in "${urls[@]}"; do
    axel -n5 "$url" 1>&5 2>&6 &
  done
  wait
}

function set_up_io {
  exec 3>&1         # stdout from this script
  exec 4>&2         # stderr from this script
  exec 5<>/dev/null # stdout from scripts run by this script, e.g. axel
  exec 6>&2         # stderr from scripts run by this script, e.g. axel
}

function main() {
  set_up_io
  download "$(urls)"
}

main "$@"
